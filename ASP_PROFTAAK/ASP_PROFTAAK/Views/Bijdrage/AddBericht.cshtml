@model ASP_PROFTAAK.Models.BijdragePosterViewModel

@{
    ViewBag.Title = "AddBericht";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddBericht</h2>
@using (Html.BeginForm("AddBijdrage", "Bijdrage", FormMethod.Post))
{
    <form>
        <hr/>
        <div class="form-group">
            <input type="text" name="Titel" id="Titel" placeholder="Titel"/>
        </div>
        <div class="form-group">
            <textarea cols="80" rows="5" type="text" id="Inhoud" name="Inhoud" placeholder="Inhoud"></textarea>
        </div>
        <textarea type="text" id="bestandslocatie" name="bestandslocatie" style="display: none"></textarea>
        <textarea type="text" id="catNaam" name="catNaam" style="display: none"></textarea>
        <textarea type="text" id="categorieid" name="categorieid" style="display: none"></textarea>
        <input type="submit" name="soort" class="btn btn-lg btn-default btn-block" value="bericht" />
    @*<button class="btn btn-lg btn-default btn-block" type="submit" value="bericht">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </button>*@
    </form>
}