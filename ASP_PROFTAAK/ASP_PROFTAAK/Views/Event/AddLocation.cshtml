            </div>
        </div>
        
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @*<input type="button" class="btn btn-info" value="Create locatie" onclick="location.href='@Url.Action("EditPlekken", "Event")'" />*@
                <input type="submit" class="btn btn-info" value="Create locatie" />

            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Event overzicht", "Index") | 
    @Html.ActionLink("Locatie overzicht", "Locaties") | 
