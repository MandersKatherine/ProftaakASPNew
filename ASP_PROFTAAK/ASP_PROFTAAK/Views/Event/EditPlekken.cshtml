@model ASP_PROFTAAK.Models.PlekSpecificatieViewModel

@{
    ViewBag.Title = "EditPlekken";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit de eigenschappen van de plekken</h2>

@using (Html.BeginForm("EditPlekken", "Event", FormMethod.Post))
{
    <table class="table">

        <tr>
            <td>
                ID (disabled)
            </td>
            <td>
                Locatie ID (disabled)
            </td>
            <td>
                Huisnummmer
            </td>
            <td>
                Capaciteit
            </td>
            <td>
                Specificatie
            </td>
        </tr>


        @for (int i = 0; i < Model.plekken.Count; i++)
        {
            <tr>
                <td>

                    @Html.TextBox("plekken[" + @i + "].ID", Model.plekken[i].ID, new {@readonly = "readonly"})
                </td>
                <td>
                    @Html.TextBox("plekken[" + @i + "].LocatieId", Model.plekken[i].LocatieId, new {@readonly = "readonly"})
               
                
                <td>
                    @Html.TextBox("plekken[" + @i + "].Nummer", Model.plekken[i].Nummer)
                </td>
                <td>
                    @Html.TextBox("plekken[" + @i + "].Capaciteit", Model.plekken[i].Capaciteit)
                </td>
                <td>
                    @foreach (var item in Model.specificaties[i])
                    {
                        
                            
                        @Html.TextBoxFor(model => item.Naam) 
                        

                    }
                </td>
                        
            </tr>
        }

        <tr>
            <td colspan="4">
                <input type="submit" value="Submit" />
            </td>
        </tr>
    </table>
}