@model IEnumerable<ASP_PROFTAAK.Models.Event>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@using (Html.BeginForm("edit", "Event", FormMethod.Post))
{

<p>
    @Html.ActionLink("Create New", "Create")
</p>
    <table class="table">
        <tr>
        
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatumStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatumEinde)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxBezoekers)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
        
                <td>
                    @Html.DisplayFor(modelItem => item.Naam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DatumStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DatumEinde)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxBezoekers)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Event", new {id = item.Id}, null) |
                    @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id}) |
                    @Html.ActionLink("Reservering maken", "Create", "Reservering", new {  id = item.Id})
                </td>
            </tr>
        }

    </table>


}

