        <div class="col-md-10">
            @Html.EditorFor(model => model.product.Prijs, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.product.Prijs, "", new { @class = "text-danger" })
        </div>
    </div>

